<div class="jet-carac">
    <div class="titre-jet-carac">
        <div>{{stats.caracteristique}} [{{stats.valeur}}]
            {{#if stats.trait}} - {{stats.trait}}{{/if}}
            {{#if stats.metier}} - {{stats.metier}}{{/if}}
            {{#if stats.hobby}} - {{stats.hobby}}{{/if}}
            {{#if stats.blesse}} - Blessé{{/if}}
        </div>
    </div>
    <div class="grid-jet-carac">
        <div class="dice-back">
            {{#if (eq stats.dices.dice0.faces 8)}}
                <div class="roll die d8">{{stats.dices.dice0.total}}</div>
            {{/if}}
            {{#if (eq stats.dices.dice0.faces 10)}}
                <div class="roll die d10">{{stats.dices.dice0.total}}</div>
            {{/if}}
            {{#if (eq stats.dices.dice0.faces 12)}}
                <div class="roll die d12">{{stats.dices.dice0.total}}</div>
            {{/if}}            
        </div>
        <div class="dice-back">
            {{#if (eq stats.dices.dice1.faces 8)}}
                <div class="roll die d8">{{stats.dices.dice1.total}}</div>
            {{/if}}
            {{#if (eq stats.dices.dice1.faces 10)}}
                <div class="roll die d10">{{stats.dices.dice1.total}}</div>
            {{/if}}
            {{#if (eq stats.dices.dice1.faces 12)}}
                <div class="roll die d12">{{stats.dices.dice1.total}}</div>
            {{/if}}
        </div>
        <div class="dice-back">
            {{#if (eq stats.dices.dice2.faces 8)}}
                <div class="roll die d8">{{stats.dices.dice2.total}}</div>
            {{/if}}
            {{#if (eq stats.dices.dice2.faces 10)}}
                <div class="roll die d10">{{stats.dices.dice2.total}}</div>
            {{/if}}
            {{#if (eq stats.dices.dice2.faces 12)}}
                <div class="roll die d12">{{stats.dices.dice2.total}}</div>
            {{/if}}
        </div> 
    </div>
    <div class="resultat"><label>Résultat : {{stats.resultat}}</label></div>
    {{#if stats.specialisation}}
        <div class="btn-spec"><button class="spec" data-actor-id="{{actorId}}" data-spec="{{stats.specialisation}}" data-dep-drame="{{stats.depenseDrame}}" data-resultat="{{stats.resultat}}" data-faces0="{{stats.dices.dice0.faces}}" data-faces1="{{stats.dices.dice1.faces}}" data-faces2="{{stats.dices.dice2.faces}}" data-total0="{{stats.dices.dice0.total}}" data-total1="{{stats.dices.dice1.total}}" data-total2="{{stats.dices.dice2.total}}">{{stats.specialisation}}</button></div>
    {{/if}}
    {{#if stats.depenseDrame}}
        <div class="btn-drame"><button class="drame" data-actor-id="{{actorId}}" data-resultat="{{stats.dices.dice2.total}}">Dépenser un point de Drame</button></div>
    {{/if}}
</div>