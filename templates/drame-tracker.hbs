<form class="{{cssClass}}" autocomplete="off">
    <div class="wallow-opacity-hover" id="drame-tracker"> {{!-- flexcol --}}
        {{#if isGM}}
        <div id="drame-tracker-drag"></div>
        {{/if}}

        <div class="grid-tracker">
            <div class="titre">Réserve de points de Drame</div>
            <div class="valeur">{{reservePointsDrame}}</div>
            <a class="tracker-reinit" title="Réinitialiser la réserve"><i class="fa-solid fa-recycle"></i></a>
            <div class="lst-pj">Personnages <i class="fa-solid fa-circle-chevron-right"></i></div>
        </div>
        
        {{!-- Complication/Churn Tracker --}}
        {{#if isGM}}
        {{#if hasComplication}}
        <div class="age-comp flexrow flex-align-center colorset-second-tier">
            <a class="comp-mod refresh"><i class="fa fa-reply"></i></a>
            {{#each compData.tracker as |v k|}}
            <div class="comp-checkbox {{#if v.check}}full-box{{/if}} {{#if (and v.milestone k)}}milestone{{/if}}" data-box-number="{{k}}"></div>
            {{/each}}
            <a class="comp-mod minus"><i class="fa fa-minus"></i></a>
            <a class="comp-mod"><i class="fa fa-plus"></i></a>
        </div>
        {{/if}}
        {{/if}}
    </div>
</form>